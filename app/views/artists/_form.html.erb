<%= form_for @artist do |f| %>
<ul>
<% if @artist.errors.any? %>
  <% @artist.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  <% end %>
  </ul>

<div class="form-group">
  <%= f.label :Name %>
 <%= f.text_field :name %>
</div>

<div class="form-group">
  <%= f.label :Email %>
  <%= f.text_field :email %>
</div>


  <div class="actions">
    <%= f.submit 'Sign up', :class => 'btn btn-outline-primary' %></div>
  <% end %>
